OPTIMIZE_titan_pgi    = -fastsse
OPTIMIZE_darter_gnu   = -O2
OPTIMIZE_darter_cray  = -O2
OPTIMIZE_beacon_intel = -fast
OPTIMIZE              = $(OPTIMIZE_$(MACHINE))

